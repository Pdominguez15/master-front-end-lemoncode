{
  "compilerOptions": {
    "target": "es6",
    "module": "es6",
    "moduleResolution": "node",
    "baseUrl": "./src/",
    "paths": {
      "common-app": ["./common-app/*"],
      "core": ["./core/*"],
      "pods": ["./pods/*"],
      "scenes": ["./scenes/*"],
      "layout": ["./layout/*"]
    },
    "declaration": false,
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "jsx": "react",
    "noLib": false,
    "suppressImplicitAnyIndexErrors": true,
    "skipLibCheck": true,
    "esModuleInterop": true
  },

  "include": ["src/**/*", "src/*"],
  "exclude": ["node_modules"]
}
